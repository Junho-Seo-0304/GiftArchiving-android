<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SearchErrorFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/search_error_image"
            android:layout_width="220dp"
            android:layout_height="200dp"
            android:src="@mipmap/ic_search_error"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="160dp"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/search_error_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_error_text1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/search_error_image"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <TextView
            android:id="@+id/search_error_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_error_text2"
            android:textColor="@color/settingsGray"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/search_error_text1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="3dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>