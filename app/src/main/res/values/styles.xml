<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

    <style name="tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/settingsGray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WriteColorMonoDatePicker" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorControlNormal">@color/colorAlphaWhite</item>
        <item name="colorControlActivated">@color/colorAlphaWhite</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="WriteStickerTabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
    </style>

</resources>